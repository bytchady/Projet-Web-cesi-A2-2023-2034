
{% extends 'partials/Base.twig' %}

{% block title %}Creer un compte {% endblock title %}

{% block body %}
    <form id="CreateAccount_Form" action="{{ url_for('Creer-un-compte') }}" method="POST">
        <div class="container">
            <div  style=" height: 40px" class="card border-0"></div>
            <div class="row align-items-center">
                <div class="col-12">
                    <p class="fs-1 text-center mt-5 mb-5">Créer un compte</p>
                </div>

                <div class="container mt-3 m-lg-2">
                    <div class="col-12 col-sm-6">
                        <div class="p-3 text-success-emphasis bg-success-subtle border border-success-subtle rounded-3" id="successMessage" style="display: none;"></div>
                    </div>
                </div>
                <div class="container mt-3 m-lg-2">
                    <div class="col-12 col-sm-6">
                        <div  class="p-3 text-danger-emphasis bg-danger-subtle border border-danger-subtle rounded-3" id="errorMessage" style="display: none;"></div>
                    </div>
                </div>

            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <div style="background-color: #28587B;height: 5px" class="card"></div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-sm-6">
                    <input type="text" class="form-control rounded-pill mt-2 mb-2 border-dark" name="Last_Name" placeholder="Prénom" aria-label="Prénom" id="Last_Name">
                </div>

                <div class="col-12 col-sm-6">
                    <input type="text" class="form-control rounded-pill mt-2 mb-2 border-dark" name="First_Name" placeholder="Nom" aria-label="Nom" id="First_Name">
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row align-items-center">
                <div class="col-12">
                    <div class="form-check">
                        <label class="form-check-label" for="Type">
                            <input class="form-check-input" type="checkbox" id="Type" name="Type">Pilote de promotion
                        </label>
                        <!-- Champ caché avec la valeur par défaut "Étudiant" et DEl à 0 par défaut-->
                        <input type="hidden" name="hidden_Type" value="Etudiant">
                        <input type="hidden" name="Del" value="0">
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col">
                    <div style="background-color: #28587B;height: 5px" class="card"></div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-sm-6">
                    <input type="text" class="form-control rounded-pill mt-2 mb-2 border-dark" name="Center" placeholder="Centre" aria-label="Centre" id="Center">
                </div>
                <div class="col-12 col-sm-6">
                    <input type="text" class="form-control rounded-pill mt-2 mb-2 border-dark" name="Promotion" placeholder="Promotion" aria-label="Promotion" id="Promotion">
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col">
                    <div style="background-color: #28587B;height: 5px" class="card"></div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-sm-6">
                    <input type="text" class="form-control rounded-pill mt-2 mb-2 border-dark" name="Login" placeholder="Nom d'utilisateur" aria-label="Nom d'utilisateur" id="Login">
                </div>

                <div class="col-12 col-sm-6">
                    <input class="form-control rounded-pill mt-2 mb-2 border-dark" type="password" name="Password"  placeholder="Mot de passe" aria-label="Password" id="Password">
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row align-items-center">
                <div class="col-6"></div>
                <div class="col-12 col-sm-6">
                    <div class="form-check">
                        <label class="form-check-label" for="ShowPassword">
                            <input class="form-check-input" type="checkbox" id="ShowPassword" > Afficher le mot de passe
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col">
                    <div style="background-color: #28587B;height: 5px" class="card"></div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-4">
                    <button style="background-color: #28587B" type="button" id="Cancel_Btn" class="btn btn-outline-light w-100 rounded-pill mt-3 mb-2 btn-padding-end">Annuler</button>
                </div>
                <div class="col-4"></div>
                <div class="col-4">
                    <button style="background-color: #28587B" type="submit" id="Submit_Btn" class="btn btn-outline-light w-100 rounded-pill mt-3 mb-2" >Créer</button>
                </div>
            </div>
            <div  style=" height: 40px" class="card border-0"></div>
        </div>

    </form>
{% endblock body %}

{% block script %}
    <script src="/Script/CreateAccount.js"></script>
{% endblock script %}