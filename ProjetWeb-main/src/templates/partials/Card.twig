{% macro content(img,title,description,nbpost) %}
<div class="row  me-2 ms-2 ">
    <div class="card mb-3 ">
        <div class="row">
            <div class="col-5 col-md-3 col-lg-2 align-self-center">
                <img src="{{ img }}" class="img-fluid rounded-start w-75 text-center" alt="...">
            </div>
            <div class="col-7 col-md-4 col-lg-7 align-self-center">
                <div class="card-body">
                    <h5 class="card-title">{{ title }}</h5>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>
            <div class="col-12 col-md-5 col-lg-3 align-self-center">
                <button style="background-color: #28587B" type="button" class="btn btn-outline-light w-100 rounded-pill">{{ nbpost }}</button>
            </div>
        </div>
    </div>
</div>
{% endmacro %}
