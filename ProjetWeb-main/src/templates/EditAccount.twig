{% extends 'partials/Base.twig' %}

{% block title %}Modifier un compte{% endblock title %}

{% block body %}
<form id="EditAccount_Form" action="{{ url_for('Modifier-un-compte', {'id': id, 'name': nom, 'surname': prenom}) }}" method="POST">
    <div class="container">
        <div  style=" height: 40px" class="card border-0"></div>
        <div class="row align-items-center">
            <div class="col-12">
                <p class="fs-1 text-center mt-5 mb-5">Modifier un compte</p>
            </div>
            <div class="container mt-3 m-lg-2">
                <div class="col-12 col-sm-6">
                    <div class="p-3 text-success-emphasis bg-success-subtle border border-success-subtle rounded-3" id="successMessage" style="display: none;"></div>
                </div>
            </div>
            <div class="container mt-3 m-lg-2">
                <div class="col-12 col-sm-6">
                    <div  class="p-3 text-danger-emphasis bg-danger-subtle border border-danger-subtle rounded-3" id="errorMessage" style="display: none;"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <div style="background-color: #28587B;height: 5px" class="card"></div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-sm-6">
                <input type="text" class="form-control rounded-pill mt-2 mb-2 border-dark" name="Last_Name" placeholder="Prénom" aria-label="Prénom" id="Last_Name" value="{{ prenom }}">
            </div>

            <div class="col-12 col-sm-6">
                <input type="text" class="form-control rounded-pill mt-2 mb-2 border-dark" name="First_Name" placeholder="Nom" aria-label="Nom" id="First_Name" value="{{ nom }}">
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <div style="background-color: #28587B;height: 5px" class="card"></div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-sm-6">
                <input type="text" class="form-control rounded-pill mt-2 mb-2 border-dark" name="Center" placeholder="Centre" aria-label="Centre" id="Center" value="{{ centre }}">
            </div>
            <div class="col-12 col-sm-6">
                <input type="text" class="form-control rounded-pill mt-2 mb-2 border-dark" name="Promotion" placeholder="Promotion" aria-label="Promotion" id="Promotion" value="{{ promotion }}">
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <div style="background-color: #28587B;height: 5px" class="card"></div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-sm-6">
                <input type="text" class="form-control rounded-pill mt-2 mb-2 border-dark" name="Status" placeholder="Statut" aria-label="Statut" id="Status" value="{{ userType }}">
            </div>

            <div class="col-12 col-sm-6">
                <input class="form-control rounded-pill mt-2 mb-2 border-dark" type="password" name="Password"  placeholder="Nouveau mot de passe" aria-label="Nouveau mot de passe" id="Password">
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-6"></div>
            <div class="col-12 col-sm-6">
                <div class="form-check">
                    <label class="form-check-label" for="ShowPassword">
                        <input class="form-check-input" type="checkbox" id="ShowPassword" > Afficher le mot de passe
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <div style="background-color: #28587B;height: 5px" class="card"></div>
            </div>
        </div>
    </div>

    <div  class="container ">
        <div class="row mt-2">
            <div class="col-4  ">
                <button style="background-color: #28587B" type="button" class="btn btn-outline-light  rounded-pill" id="Cancel_Btn">Annuler</button>
            </div>
            <div class="col-4  text-end">
                <button style="background-color:red" type="submit" class="btn btn-outline-light  rounded-pill " id="Delete_Btn">Supprimer</button>
            </div>
            <div class="col-4  text-end ">
                <button style="background-color: #28587B" type="submit" class="btn btn-outline-light  rounded-pill " id="Submit_Btn">Modifier</button>
            </div>
        </div>
    </div>

    <div  style=" height: 20px" class="card border-0"></div>
</form>
{% endblock body %}

{% block script %}
    <script src="/Script/EditAccount.js"></script>
{% endblock script %}